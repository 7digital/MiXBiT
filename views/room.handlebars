<style>
  .room.loading {
	display: none;
  }
  .room-loading.hidden {
	display: none;
  }
</style>

<section class="room loading">
	<h1>Music room</h1>
	<p>Welcome to room '<span class="room-title"></span>' 'id:{{ id }}'</p>
	<p>
		Just heard:
		<ul class="track-history"></ul>
	</p>
	<p>
		Now playing: <span class="current-track-title"></span> at <span class="current-track-position"></span>
	</p>
	<p>
		Coming up:
		<ul class="track-queue"></ul>
	</p>
</section>

<section class="room-loading">
	<span class="status">Connecting to server...</span>
</section>

