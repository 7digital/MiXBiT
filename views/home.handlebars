<section class="create-a-room">
    <a class="btn large" href="#create-room" title="Create a room">Create</a>
</section>

<section class="room-selection">
    <h2 class="header">ROOM SELECTION</h2>
    <ul class="room-list">
    {{#each rooms}}
        <li class="room">
            <a class="cube {{toLowerCase genre}}" href="/room/{{id}}" title="{{name}}">{{name}}
                <span class="tooltip">
                    <img class="tooltip-thumb" src="{{smallPack current.image}}" alt="">
                    <strong class="tooltip-header">{{name}}</strong>
                    <em class="tooltip-album-title">{{current.artistName}}- {{current.trackName}}</em>
                    <span class="tooltip-listeners">Listeners: <strong>{{listeners}}</strong></span>
                </span>
            </a>
        </li>
    {{/each}}
    </ul>

    <ul class="room-key">
        <li class="rock">Rock</li>
        <li class="techno">Techno</li>
        <li class="disco">Disco</li>
        <li class="hip-hop">Hip - Hop</li>
    </ul>

</section>

<section id="create-room" class="modal room-creator">
    <form action="/room/create" method="post">

        <div class="data-field">
            <label for="name">Name</label>
            <input tabindex="1" type="text" id="name" name="name"></input>
        </div>

        <div class="data-field">
            <label for="genre">Genre</label>
            <select tabindex="2" name="genre" id="genre">
                 <option value="Rock">Rock</option>
                 <option value="Techno">Techno</option>
                 <option value="Disco">Disco</option>
                 <option value="Hip-Hop">Hip-Hop</option>
            </select>
        </div>

        <input tabindex="3" class="btn" type="submit" value="Create"></input>

        <a class="cancel" href="#" title="Cancel">Cancel</a>

    </form>
</section>
